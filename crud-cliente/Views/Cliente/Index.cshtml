@model IEnumerable<crud_cliente.Models.Cliente>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Clientes</h2>

        </div>
        <div class="col-6">
            <a asp-controller="Cliente" asp-action="Crear" class="btn btn-primary">Nuevo Cliente</a>
        </div>

    </div>

    <br />

    @if(Model.Count() > 0)
    {
      <table class="table table-bordered table-striped" style="width:100%">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th>Tipo de Documento</th>
                  <th>Documento</th>
                  <th>Celular</th>
                  <th>Direccion</th>
              </tr>
          </thead>

          <tbody>
              @foreach(var item in Model)
              {
                  <tr>
                      <th width="20%">@item.Nombre</th>
                        <th width="20%">@item.TipoDocumento</th>
                        <th width="20%">@item.Documento</th>
                        <th width="20%">@item.Celular</th>
                        <th width="20%">@item.Direccion</th>
                        <th> 
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Cliente" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">Editar</a>
                                <a asp-controller="Cliente" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">Eliminar</a>
                            </div>    
                        </th>
                  </tr>
              }
          </tbody>
        </table>
    }
    else
    {
        
    <p>No hay clientes registrados</p>
    }

</div>

